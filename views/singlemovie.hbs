<div class="single-movie">
    {{#with yyy}}
    <div class="div-image">
        <img src={{image}} alt={{title}}>
    </div>

    <div class="div-info">
        <a href="/moviesPepe">Go Back</a>

        <h1>{{title}}</h1>
        <h2>Director: {{director}}</h2>
        <h3>Stars:</h3>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>
        {{#each showtimes}}
            <p class="inline">{{this}} |</p> 
        {{/each}}
    </div>
    {{/with}}
</div>